<% include ../partials/header.ejs %>

<main class="container">

<h1>Book Details</h1>

<form method="post">
    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Title: *</label>
        <input name="title" id="title" required value="<%= book.title %>" />
    </div>
    <div class="form-group">
        <label for="author" class="col-sm-2 control-label">Author: *</label>
        <input name="author" id="author" required value="<%= book.author %>" />
    </div>
    <div class="form-group">
        <label for="price" class="col-sm-2 control-label">Price:</label>
        <input name="price" id="price" min="0.01" type="number" step="any" value="<%= book.price %>"  />
    </div>
    <div class="form-group">
        <label for="year" class="col-sm-2 control-label">Year:</label>
        <input name="year" id="year" min="1600" type="number" step="any" value="<%= book.year %>" />
    </div>
    <button class="btn btn-success col-sm-offset-2">Save</button>
</form>

</main>

<% include ../partials/footer.ejs %>